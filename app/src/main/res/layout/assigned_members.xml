<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="@dimen/details_list_title_padding">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/member_profile_img"
        android:layout_width="@dimen/details_selected_member_img_size"
        android:layout_height="@dimen/details_selected_member_img_size"
        android:contentDescription="@string/profile_picture_img"
        android:visibility="visible"
        android:src="@drawable/ic_user_place_holder"
        app:civ_border_color="@color/primary_text_colour"
        app:civ_border_width="@dimen/img_border_width"
        tools:visibility="gone"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/add_assignee"
        android:layout_width="@dimen/details_selected_member_img_size"
        android:layout_height="@dimen/details_selected_member_img_size"
        android:contentDescription="@string/profile_picture_img"
        android:src="@drawable/ic_add_member"
        app:civ_border_color="@color/colourAccent"
        app:civ_border_width="2dp"
        android:visibility="visible"
        tools:visibility="visible"/>

</LinearLayout>